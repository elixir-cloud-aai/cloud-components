{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": [
		"**/.env.*local",
		"**/tsconfig.json",
		"**/package.json"
	],
	"globalEnv": ["GITHUB_TOKEN"],
	"pipeline": {
		"ecc-docs#build": {
			"dependsOn": [
				"@elixir-cloud/design#build",
				"@elixir-cloud/lit-tes#build",
				"@elixir-cloud/lit-wes#build"
			]
		},
		"build": {
			"outputs": ["./apps/documentation/.next/**"],
			"dependsOn": ["^build"]
		},
		"test": {
			"dependsOn": ["build"]
		},
		"lint": {},
		"lint:fix": {
			"cache": false
		},
		"dev": {
			"cache": false,
			"persistent": true,
			"dependsOn": ["build"]
		}
	}
}
