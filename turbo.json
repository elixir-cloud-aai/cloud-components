{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "topo": {
      "dependsOn": ["^topo"]
    },
    "build": {
      "outputs": ["www/**", ".next/**", "dist/**"],
      "dependsOn": ["^build"]
    },
    "test": {
      "dependsOn": ["topo"]
    },
    "lint": {
      "dependsOn": ["build"]
    },
    "lint:fix": {
      "cache": false,
      "dependsOn": ["build"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["topo"]
    },
    "clean": {
      "dependsOn": ["^clean"]
    },
    "clean:react": {}
  }
}
